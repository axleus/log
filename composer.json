{
    "name": "axleus/log",
    "description": "Axleus Logging component",
    "license": "BSD-3-Clause",
    "keywords": [
        "axleus",
        "psr 3",
        "monolog"
    ],
    "authors": [
        {
            "name": "Joey Smith",
            "email": "jsmith@webinertia.net",
            "homepage": "https://github.com/axleus"
        }
    ],
    "suggest": {
    },
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0",
        "axleus/db": "dev-master",
        "laminas/laminas-db": "^2.20.0",
        "laminas/laminas-hydrator": "^4.14",
        "laminas/laminas-component-installer": "^3.2",
        "monolog/monolog": "^3.4",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.5",
        "phpunit/phpunit": "^10.2",
        "psalm/plugin-phpunit": "^0.18.4",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^5.14"
    },
    "extra": {
        "laminas": {
            "module": "Log",
            "config-provider": "Log\\ConfigProvider"
        }
    },
    "autoload": {
        "psr-4": {
            "Log\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Log\\Test\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always --testsuite \"unit test\"",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "test-integration": "phpunit --colors=always --testsuite \"integration test\""
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.99"
        },
        "allow-plugins": {
            "laminas/laminas-component-installer": true,
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
